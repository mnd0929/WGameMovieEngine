<UserControl x:Class="WGameMovieEngine.Engine.UI.VolumeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WGameMovieEngine.Engine.UI"
             mc:Ignorable="d" Width="425" Height="100">
    <Border Background="DarkGray" BorderBrush="Gray" BorderThickness="1,1,1,1" CornerRadius="10,10,10,10" Opacity="0.7">
        <Grid>
            <Image x:Name="LoadPanelUI_BackgroundImage" Grid.RowSpan="2"/>
            <Label x:Name="LoadPanelUI_TitleLabel"  Content="Громкость плеера" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="20" Foreground="White"/>
            <Rectangle x:Name="LoadPanelUI_BorderRectangle" HorizontalAlignment="Center" Height="28" Margin="0,52,0,0" Stroke="White" VerticalAlignment="Top" Width="395"/>
            <Rectangle x:Name="LoadPanelUI_ProgressRectangle"  HorizontalAlignment="Left" Height="28" Margin="14,52,0,0" Stroke="White" Fill="White" VerticalAlignment="Top" Width="94"/>
        </Grid>
    </Border>
</UserControl>
