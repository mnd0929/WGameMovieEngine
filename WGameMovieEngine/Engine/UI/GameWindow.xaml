<Window x:Class="WGameMovieEngine.Engine.UI.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WGameMovieEngine.Engine.UI"
        mc:Ignorable="d"
        Background="Black"
        Title="GameWindow" Height="450" Width="800"
        Closing="Window_Closing">
    <Grid x:Name="engineUI_Grid">
        <MediaElement x:Name="engineUI_Player" UnloadedBehavior="Manual" LoadedBehavior="Manual"/>
        <ListBox x:Name="engineUI_ChoiseListBox" Opacity="0" Background="Gray" HorizontalContentAlignment="Stretch" HorizontalAlignment="Left"/>
        <Label Opacity="0.6" x:Name="engineUI_DebugLabel" Content="Debug: ON" VerticalAlignment="Top" HorizontalAlignment="Right" Width="221" Foreground="DarkOrange" Background="Black" HorizontalContentAlignment="Right" VerticalContentAlignment="Stretch" Height="68" Visibility="Hidden"/>
    </Grid>
</Window>
